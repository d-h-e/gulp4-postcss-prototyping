{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "one-line": false,
        "eofline": false,
        "quotemark": [true, "single"],
        "max-classes-per-file": [true, 5],
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}